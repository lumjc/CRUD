

<form action="/user/signup" method="POST">
<section class="hero is-fullheight is-dark is-bold">
    <div class="hero-body">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column is-6 is-offset-3">
            <h1 class="title">
              Sign Up
            </h1>
            <div class="box">
              <% if(typeof alert != 'undefined') { %>
                <% alert.forEach(function(error) { %>
               <div class="notification is-danger is-light">
                <button class="delete"></button>
                       <%= error.msg %>
                </div>
                <% })%>
                <% } %> 

              <label class="" for="Username">Username</label>
              <p class="control has-icon has-icon-right">
                <input class="input mb-5 mt-3" type="text" id="username" name="username" placeholder="jsmith@example.org" >
              </p>
              <label for="email">Email</label>
              <p class="control has-icon has-icon-right">
                <input class="input mb-5 mt-3" type="email" id="email" name="email" placeholder="jsmith@example.org" >
              </p>
              <label for="password">Password</label>
              <p class="control has-icon has-icon-right">
                <input class="input mb-5 mt-3" type="password" id="password" name="password" placeholder="●●●●●●●" >
              </p>
              <hr>
              <p class="control">
                <button type ="submit" class="button is-primary">Sign Up</button>
                <a href="/user/login" class="button is-default"> Cancel </button>
              </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>
