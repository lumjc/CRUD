<div class="container">
  <div class="box has-background-grey-darker"> 
<h2 class="is-size-3 has-text-white">Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label class="is-size-4 has-text-white">Title</label>
    <input class="ml-3 pt-2 pb-2 mt-5 is-size-6" type="text" name="title" value="<%= searchOptions.title %>">
  </div>
  
  <div>
    <label class="is-size-4 has-text-white" for="">Published After</label>
    <input class="ml-3 pt-2 pb-2 mt-5 is-size-6" type="date" name="publishedAfter" value="
    <%= searchOptions.publishedAfter %>">
  </div>

  <div>
    <label class="is-size-4 has-text-white"for="">Published Before</label>
    <input class="ml-3 pt-2 pb-2 mt-5 is-size-6" type="date" name="publishedBefore" value="
    <%= searchOptions.publishedBefore %>">
  </div>
  <button class="button is-medium button is-primary is-outlined mt-3" type="submit">Search</button>
</form>
    <nav class="level pt-3">
    <% books.forEach(book => { %>
     <img height="150" width="100" src="<%= book.coverImgPath %>">
    <% }) %>
    </nav>
</div>
</div>


