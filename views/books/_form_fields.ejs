<div class="box has-background-grey-darker">
<div class="form-row">
    <div class="form-item">
        <label class="is-size-4 has-text-white"> Title </label>
        <input class="pt-2 pb-2 is-size-5" type="text" name="title"><%= book.title %>
    </div>
    <div class="form-item">
        <select name="author" class="pt-2 pb-2 mt-5">
            <label class="has-text-white"> Author </label>
            <% authors.forEach(author => { %>
                <% if (author.id === book.author) { %> 
                <option selected label = "<%= author.name %>" value = "<%= author.id %>"></option>
                <% } else { %> 
                <option label = "<%= author.name %>" value = "<%= author.id %>"></option>
            <% } %>
            <% }) %>
        </select>
    </div>
</div>


<div class="form-row">
    <div class="form-item">
        <label class="is-size-4 has-text-white">Publish Date</label>
        <input class="pt-2 pb-2 is-size-5" type="date" name="publishDate" 
            value= "<%= book.publishDate == null ? '' : 
            book.publishDate.toISOString().split('T')[0] %>">
        </div>
        <div class="form-item">
        <label class="is-size-4 has-text-white">Page Count</label>
        <input class="pt-2 pb-2 is-size-5" type="number" name="pageCount" min="1" value = <% book.pageCount%> >
    </div>
</div>

<div class="form-row column is-full">
    <div class="form-item form-item-no-grow column is-one-fifth">   
        <label class="has-text-white">Cover</label>
        <input type="file" name="cover" class="filepond">
    </div>


    <div class ="form-item">
        <label class="is-size-4 has-text-white">Description</label>
        <textarea name = "description" <%= book.description %> >
        </textarea>
    </div>
</div>
</div>